<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube Downloader - Launcher</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #0f0f1a 0%, #1a1a2e 100%);
            min-height: 100vh;
            padding: 20px;
        }
        .main-container { max-width: 1400px; margin: 0 auto; }
        h1 {
            color: #fff; text-align: center; margin-bottom: 10px;
            font-size: 28px; text-shadow: 0 4px 20px rgba(255, 8, 68, 0.3);
        }
        .subtitle {
            text-align: center; color: rgba(255,255,255,0.5);
            font-size: 14px; margin-bottom: 40px;
        }
        .container {
            background: rgba(255,255,255,0.05); backdrop-filter: blur(10px);
            border-radius: 20px; padding: 40px;
            border: 1px solid rgba(255,255,255,0.1);
            box-shadow: 0 25px 50px rgba(0,0,0,0.3);
            max-width: 500px; margin: 0 auto;
        }
        .status-display {
            text-align: center; padding: 20px;
            background: rgba(255,255,255,0.05);
            border-radius: 12px; margin-bottom: 30px;
        }
        .status-icon {
            font-size: 48px; margin-bottom: 10px;
        }
        .status-text {
            font-size: 18px; font-weight: 600;
        }
        .status-text.running {
            color: #00ff88;
        }
        .status-text.stopped {
            color: #ff0844;
        }
        .status-text.checking {
            color: rgba(255,255,255,0.7);
        }
        .button-group {
            display: flex; flex-direction: column; gap: 15px;
        }
        button {
            width: 100%; padding: 18px;
            border: none; border-radius: 12px; color: #fff;
            font-size: 16px; font-weight: 600; cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        button:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(255,8,68,0.3);
        }
        button:active { transform: translateY(0); }
        button:disabled {
            opacity: 0.4; cursor: not-allowed; transform: none;
        }
        #startBtn {
            background: linear-gradient(135deg, #ff0844 0%, #ffb199 100%);
        }
        #stopBtn {
            background: linear-gradient(135deg, #ff0844 0%, #ffb199 100%);
        }
        #openBtn {
            background: linear-gradient(135deg, #00ff88 0%, #00cc6a 100%);
        }
        .instructions {
            margin-top: 30px; padding: 20px;
            background: rgba(255,255,255,0.03);
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,0.08);
        }
        .instructions h3 {
            color: #fff; font-size: 14px; margin-bottom: 15px;
            text-transform: uppercase; letter-spacing: 1px;
        }
        .instructions ol {
            color: rgba(255,255,255,0.6); font-size: 13px;
            line-height: 1.8; padding-left: 20px;
        }
        .instructions li {
            margin-bottom: 8px;
        }
        .instructions em {
            color: rgba(255,255,255,0.4);
        }
        .footer {
            text-align: center;
            padding: 30px 20px;
            margin-top: 40px;
            border-top: 1px solid rgba(255,255,255,0.1);
        }
        .footer a {
            color: #ff0844;
            text-decoration: none;
            font-weight: 600;
            transition: opacity 0.2s;
        }
        .footer a:hover {
            opacity: 0.8;
        }
        .footer-text {
            color: rgba(255,255,255,0.4);
            font-size: 12px;
        }
        .spinner {
            display: inline-block; width: 14px; height: 14px;
            border: 2px solid rgba(255,255,255,0.3);
            border-top-color: #fff; border-radius: 50%;
            animation: spin 0.8s linear infinite; margin-left: 8px;
            vertical-align: middle;
        }
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <h1>YouTube Downloader & Stem Isolator</h1>
        <p class="subtitle">Server Launcher</p>

        <div class="container">
            <div class="status-display">
                <div class="status-icon" id="statusIcon"></div>
                <div class="status-text checking" id="statusText">Checking server status...</div>
            </div>

            <div class="button-group">
                <button id="startBtn" onclick="startServer()">Start Server</button>
                <button id="stopBtn" onclick="stopServer()" disabled>Stop Server</button>
                <button id="openBtn" onclick="openApp()" disabled>Open App</button>
            </div>

            <div class="instructions">
                <h3>How to use</h3>
                <ol>
                    <li>Click "Start Server"</li>
                    <li>Wait for green "Server is running" status</li>
                    <li>Click "Open App" to launch the downloader</li>
                    <li><em>Keep this page open while using the app</em></li>
                </ol>
            </div>
        </div>
    </div>

    <footer class="footer">
        <p class="footer-text">Coded by <a href="https://instagram.com/geenaro" target="_blank">@geenaro</a></p>
    </footer>

    <script>
        const startBtn = document.getElementById('startBtn');
        const stopBtn = document.getElementById('stopBtn');
        const openBtn = document.getElementById('openBtn');
        const statusText = document.getElementById('statusText');
        const statusIcon = document.getElementById('statusIcon');

        // Check server status
        async function checkStatus() {
            try {
                const response = await fetch('http://localhost:8080/downloads', {
                    method: 'GET',
                    signal: AbortSignal.timeout(2000)
                });
                if (response.ok) {
                    updateStatus(true);
                } else {
                    updateStatus(false);
                }
            } catch {
                updateStatus(false);
            }
        }

        function updateStatus(isRunning) {
            if (isRunning) {
                statusIcon.textContent = '●';
                statusText.textContent = 'Server is running';
                statusText.className = 'status-text running';
                startBtn.disabled = true;
                stopBtn.disabled = false;
                openBtn.disabled = false;
            } else {
                statusIcon.textContent = '○';
                statusText.textContent = 'Server is stopped';
                statusText.className = 'status-text stopped';
                startBtn.disabled = false;
                stopBtn.disabled = true;
                openBtn.disabled = true;
            }
        }

        async function startServer() {
            startBtn.textContent = 'Starting...';
            startBtn.disabled = true;

            // Prompt user to run the command file
            alert('Please double-click "start_server.command" in the project folder to start the server.\n\nThis window can\'t start the server directly for security reasons.');

            // Check status after delay
            setTimeout(async () => {
                await checkStatus();
                startBtn.textContent = 'Start Server';
            }, 3000);
        }

        async function stopServer() {
            stopBtn.textContent = 'Stopping...';
            stopBtn.disabled = true;

            alert('Please double-click "stop_server.command" in the project folder to stop the server.');

            setTimeout(async () => {
                await checkStatus();
                stopBtn.textContent = 'Stop Server';
            }, 2000);
        }

        function openApp() {
            window.open('http://localhost:8080', '_blank');
        }

        // Check status on load and every 2 seconds
        checkStatus();
        setInterval(checkStatus, 2000);
    </script>
</body>
</html>
